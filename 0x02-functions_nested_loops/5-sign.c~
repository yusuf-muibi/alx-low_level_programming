#include "main.h"
/**
* print_sign - This is the function that prints the sign of the input number
* @n: This is the parameter for the input number
* Return: This returns 1, 0 and -1 for the input number as the case may be
*/
int print_sign(int n)
{
if (n > 0)
{
_putchar('+');
return (1);
}
else if (n < 0)
{
_putchar('-');
return (-1);
}
else if (n == 0)
{
_putchar('0');
return (0);
}
}
